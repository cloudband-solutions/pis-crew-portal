<div class="for_non_mobile">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <center>
  <div class="log-in">
    <h2>Welcome to Crew Portal</h2>
      <%= image_tag "perso_gris.png" %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label: false, placeholder: " Username..."  %>
        <%= f.input :password, required: false, label: false, placeholder: " ********" %>
      </div>

      <div class="form-actions btn-login">
        <%= f.button :submit, "Log in", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  </center>
</div>


